<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>{{pageTitle}} - LitVerse</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<nav class="navbar navbar-dark bg-primary">
  <div class="container">
    <a class="navbar-brand" href="/">LitVerse</a>
  </div>
</nav>

<main class="container py-4">
  <h1 class="h4 mb-3">{{pageTitle}}</h1>

  <form method="post" action="{{action}}" class="card p-3 shadow-sm">
    <div class="mb-3">
      <label class="form-label">Title</label>
      <input class="form-control" name="title" value="{{story.title}}" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Author</label>
      <input class="form-control" name="author" value="{{story.author}}" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Language</label>
      <input class="form-control" name="language" value="{{story.language}}">
    </div>

    <div class="mb-3">
      <label class="form-label">Text</label>
      <textarea class="form-control" name="text" rows="6" required>{{story.text}}</textarea>
    </div>

    <div class="mb-3">
      <label class="form-label">Tags (comma-separated)</label>
      <input class="form-control" name="tags" value="{{story.tagsText}}">
    </div>

    <div class="d-flex gap-2">
      <button class="btn btn-primary" type="submit">{{#isEdit}}Update{{/isEdit}}{{^isEdit}}Create{{/isEdit}}</button>
      <a class="btn btn-secondary" href="/">Cancel</a>
    </div>
  </form>
</main>
</body>
</html>

