<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>LitVerse</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<nav class="navbar navbar-dark bg-primary">
  <div class="container">
    <a class="navbar-brand" href="/">LitVerse</a>
    <div class="d-flex gap-2">
      <a class="btn btn-light btn-sm" href="/new">➕ Add Story</a>
      <a class="btn btn-outline-light btn-sm" href="/api/stories" target="_blank">JSON API</a>
    </div>
  </div>
</nav>

<main class="container py-4">
  <h1 class="h4 mb-3">Stories</h1>

  {{^stories}}
    <div class="alert alert-info">
      No stories yet. Click <b>Add Story</b> to create one.
    </div>
  {{/stories}}

  {{#stories}}
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title mb-1">{{title}}</h5>
        <div class="text-muted small mb-2">by {{author}} • {{language}}</div>
        <p class="card-text">{{text}}</p>

        <div class="mb-3">
          {{#tags}}
            <span class="badge bg-secondary me-1">{{.}}</span>
          {{/tags}}
        </div>

        <a class="btn btn-outline-primary btn-sm" href="/edit/{{_id}}">Edit</a>
        <a class="btn btn-outline-danger btn-sm" href="/delete/{{_id}}" onclick="return confirm('Delete this story?')">Delete</a>
      </div>
    </div>
  {{/stories}}
</main>
</body>
</html>

